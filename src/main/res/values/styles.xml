<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textDirection">rtl</item>
    </style>

    <style name="Quote" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textDirection">rtl</item>
    </style>

    <style name="Narration" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textDirection">rtl</item>
    </style>

    <style name="Choice" parent="TextAppearance.AppCompat.Button">
        <!--<item name="android:background">@drawable/multiline_edit_text</item> TODO: The problem here is the background color -->
        <item name="android:background">#f0e3fa</item>
        <item name="android:textSize">20sp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:bottomLeftRadius">50dp</item>
    </style>

</resources>
